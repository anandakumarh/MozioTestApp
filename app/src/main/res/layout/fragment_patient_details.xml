<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/demin_16_dp"
    tools:context=".ui.home.PatientDetailsFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/patient_name_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/patient_name_hint"
        android:paddingBottom="@dimen/dimen_8_dp"
        android:paddingTop="@dimen/dimen_8_dp">

        <EditText
            android:id="@+id/patient_name_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_roboto_regular"
            android:maxLines="1"
            android:textColor="@color/text_black_subtitle" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/patient_age_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/patient_age"
        android:paddingBottom="@dimen/dimen_8_dp"
        android:paddingTop="@dimen/dimen_8_dp">

        <EditText
            android:id="@+id/patient_age_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_roboto_regular"
            android:inputType="number"
            android:maxLength="3"
            android:maxLines="1"
            android:textColor="@color/text_black_subtitle" />

    </android.support.design.widget.TextInputLayout>



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female" />

    </RadioGroup>

</LinearLayout>
